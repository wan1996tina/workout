html,body
    width 100%
    height 100%

* 
    margin 0
    padding 0
    list-style none
    box-sizing border-box

#app 
    width 100%
    height 100vh
    position relative

    .background 
        width 100%
        height 100%
        background-color #efefef
        position fixed
        z-index -99
    .slideBg
        width 97%
        height 150%
        background-color #ccc
        border-radius 15px 15px 0 0
        position fixed
        top 2%
        left 1.5%
        z-index -1

.nav-item 
    background-color #eeeeee
    margin-bottom 15px
    font-size 30px
    line-height 50px
    text-align center
    border-radius 5px

.bm-burger-bars
    background-color white



