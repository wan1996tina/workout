@font-face 
    font-family modernline
    src url('../assets/modernline.otf')

@font-face 
    font-family shorelines
    src url('../assets/Shorelines Script Bold.otf')

@font-face 
    font-family cream-peach
    src url('../assets/Cream Peach.ttf')

@font-face 
    font-family bebasneue
    src url('../assets/BebasNeue-Regular.ttf')

@font-face 
    font-family big-noodle
    src url('../assets/big_noodle_titling.ttf')

@font-face 
    font-family gobold
    src url('../assets/Gobold Regular.otf')

html,body
    width 100%
    height 100%

*
    margin 0
    padding 0
    list-style none
    box-sizing border-box
    font-family 'Microsoft JhengHei','Arial'

// ---------- app.vue ----------------------------------------------------------
#app 
    width 100%
    height 100vh
    position relative
    overflow hidden

.main-content
    width 100%
    height 100%
    position fixed
    top 56px

// 選單選項
#menu
    background #bbb
    width 90px
    height 80%
    border-radius 15px
    position absolute
    top calc(50% - 40vh)
    left 20px

#menu .nav-item 
    // background-color #F5AF5E
    margin-bottom 15px
    font-size 30px
    line-height 50px
    text-align center
    border-radius 5px

#menu a
    text-decoration none
    color white

#menu .nav-link:hover,
#menu .nav-link:focus 
    background rgb(115, 157, 230)
    border-radius 5px
    width 100%
    height 100%

#menu svg 
    // background red

#menu .nav span
    display inline-block
    width 40%
    text-align left
    font-size 22px
    margin-left 15px
    // background-color green

// 選單按鈕
.bm-burger-bars
    background-color white !important

// 選單展開時的覆蓋背景
.bm-overlay
    background #fff

.bg-info 
    background-color: rgb(47,85,151)!important;

// 小選單
.navbar
    justify-content 

#app .navbar-brand
    margin 0 auto

#nav
    height 100%
    display flex 
    justify-content space-evenly
    align-items center

.navbar-dark .navbar-toggler 
    color rgba(255,255,255,.5)
    border none 
    padding .25rem .25rem

.navbar-dark .navbar-toggler:active
    outline none
    border none
    
.navbar-dark .navbar-toggler:focus
    outline none
    border none

.b-sidebar 
    display flex
    flex-direction column
    position fixed !important
    top 56px
    width 400px
    max-width 100% !important
    height calc(100vh - 56px) !important
    margin 0 !important
    outline 0
    -webkit-transform translateX(0)
    transform translateX(0)
    background rgb(224, 236, 255) !important
    transition 0.5s !important
    z-index 9999

.b-sidebar-body::-webkit-scrollbar 
    display none

.b-sidebar.b-sidebar-right 
    left: auto;

.profile
    width 50%
    overflow hidden
    border-radius 500px
    // background red
.userImg
    width 200px
    height 200px
    // border-radius 50%
    position relative
    overflow hidden

.userPhoto
    width 200px
    position absolute
    bottom 0px

.userList
    height 40px
    line-height 40px
    border-radius 6px
    margin-bottom 10px
    text-align center

.menu-sm
    // display none

.btn-logout
    margin 20px auto
    width 60%

#nav-sm,
#user-option
    display none

.home-content
    background #fff
    position absolute
    width 100%
    right 0
    
// ---------- home.vue ----------------------------------------------------------
#home
    background #fff
    height 100%
    position absolute
    left 0
    right 0
    width 100%
    overflow-y scroll
    overflow-x hidden

#home h1
    font-size 40px
    width 100%
    text-align center
    line-height 100px

#home .banner
    background #eee
    height 400px
    box-shadow 0px 10px 20px rgba(50,50,50,0.1)
    color #444
    object-fit fill
    object-position center center
    overflow hidden
    position relative

#home .banner::before
    content ''
    position absolute
    background rgba(127, 255, 245, 0.7)
    z-index 999
    width 300px
    height 300px
    border-radius 20px
    transform rotate(45deg)

.subtitle 
    font-size 22px
    color #888
    width 100px
    height 50px
    line-height 50px
    text-align center

.toolbar
    height 50px
    margin 20px 0
    padding 0
    border-radius 10px
    // box-shadow 0 0 10px rgba(0,0,0,0.1)


#home .imgWrap
    width 150px
    height 100px
    overflow hidden
    border-radius 12px
    object-fit cover

#home .card
    width 25%
    display flex
    justify-content center

.img-fluid 
    object-fit cover

.login-btn
    width 80px
    height 28px
    border-radius 14px
    background rgb(47,85,151)
    border none
    color white
    margin-left 50px
    font-size 14px
    line-height 28px

.sign-btn
    width 80px
    height 28px
    border-radius 14px
    background #fff
    // border 1px solid rgb(47,85,151)
    color rgb(47,85,151)
    font-size 13px
    line-height 25px
    margin-left 50px
    font-weight 600
    border none

.login-btn:hover,
.sign-btn:hover
    background #ddd
    color #000
    transition 0.3s ease-in
    border-color #ddd

.login-btn:focus,
.sign-btn:focus
    outline none

.modal-body
    padding 0

.modal-content
    border-radius 14px

.bg-video
    height 100vh
    position fixed
    // z-index -1

.t1
    font-size 90px
    position absolute
    left calc(50% - 240px)
    z-index 999
    color white
    font-family cream-peach
    letter-spacing 3px
    top 26%

.t2
    font-size 45px
    position absolute
    z-index 999
    color white
    left calc(50% - 36.5px)
    top 42%
    font-family bebasneue
    letter-spacing 5px

.t3
    font-family big-noodle
    font-size 200px
    position absolute
    z-index 999
    color white
    top 47%
    left calc(50% - 403px)

.gradient
    width 100%
    height 100vh
    position fixed

#app .btn-user
    border-radius 50% 

#login_title p
    color white
    font-size 15px
    text-align center
    letter-spacing 2px

.btn-editList
    height 28px
    line-height 15px

.user-content
    padding 15px 34px

.list-wrap::-webkit-scrollbar 
    display none

