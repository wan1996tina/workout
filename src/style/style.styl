.info 
    top 400px
    width 100%
    // background #fff
    position absolute
    z-index 9999
    padding 15px 0
    color #6C443C

.info h4,
.info p
    font-family 'Oswald','Microsoft JhengHei'
    color #6C443C

.form 
    top 600px
    width 100%
    position absolute
    z-index 9999
    color #6C443C

.form input
    line-height 45px
    width 80%
    padding-left 15px
    border none

.form textarea
    width 80%
    padding 0 15px
    line-height 45px
    border none

.form input:focus,
.form textarea:focus
    outline none

.contact
    height 133vh
    margin-top 150px
    position relative

.ct-submit
    background #6C443C
    border none
    color #ffffff
    width 150px
    height 45px
    border-radius 5px
    font-size 15px
    font-family 'Oswald'
    letter-spacing 2px
    margin-top 30px
    transition 0.3s

.ct-submit:focus
    outline none

.ct-submit:hover
    background #9B7A73

.footer
    width 100%
    height 40vh
    background #FFE1B2

.icon-wrap
    border 1px solid #6C443C
    width 45px
    height 45px
    color #6C443C
    font-size 23px
    line-height 43px
    text-align center

.icons
    padding 100px 0
    margin 0 auto

.c2-img
    padding-top 100px

.c2-img img
    max-width 130%
    object-fit cover
    object-position center center

.img-wrap
    height 250px
    width 250px
    overflow hidden
    border-radius 50%

// -------- workout.vue --------------------------------------------
#workout
    background #fff
    height 100%
    position absolute
    left 0
    right 0%
    width 100%
    overflow scroll

#workout .banner
    background #FFE1B2
    height 300px
    border-radius 20px
    box-shadow 0px 10px 20px rgba(50,50,50,0.1)
    color #444
    display flex
    justify-content flex-start
    align-items center
    margin-left 20px

#workout .banner .title
    text-align center
    line-height 300px
    color #6C443C
    font-family 'Playfair Display'
    font-size 50px

#workout .navbar
    margin-top 30px
    width 100%

.navbar a
    color #000

#workout .poseCard
    width 90%
    height 150px
    background #FFF0E4
    border-radius 10px
    margin 0 10px
    box-shadow 0 5px 15px #FFF0E4

#workout .poseCard2
    background #E4F3FF
    box-shadow 0 5px 15px #E4F3FF

#workout .class-sub
    background linear-gradient(90deg, rgb(47,85,151) 0, rgb(47,85,151) 100%)
    width 170px
    height 35px
    line-height 35px
    text-align center
    color #fff
    text-shadow 0 0 20px #faa
    border-radius 20px
    letter-spacing 2px
    font-size 17px
    
#workout .navbar .nav-link:active
    background #faa

// -------- timer.vue --------------------------------------------
#timer
    background #fff
    height 100%
    position absolute
    left 0
    right 0
    width 100%
    overflow scroll
    position relative

#timer::-webkit-scrollbar 
    display none

.timer-tools
    background #FFD98D
    font-size 28px
    position absolute
    top 50%
    transform translateY(-50%)
    right 15px
    // padding 50px 0
    height 50%
    border-radius 5px
    justify-content space-evenly

.timer-tools a
    color #6C443C

.numBg
    height 300px
    background #fff
    display flex
    justify-content center
    align-items center
    box-shadow 0 15px 15px rgba(50,50,50,0.1)
    border-radius 6px

.numBg h1
    font-size 150px
    font-weight 800
    color #333 !important

.clockBg
    width 56%
    height 100%
    display flex
    justify-content center
    align-items center
    background #FFF8DF
    border-radius 6px
    box-shadow 0 15px 15px rgba(50,50,50,0.1)
    position relative

.dot
    width 18px
    height 18px
    background #333
    margin 20px 0
    border-radius 3px

.timer-title
    position relative
    color white !important
    font-size 35px

.timer-title::before
    content ''
    position absolute
    width 120%
    height 120%
    background #666
    border-radius 7px
    z-index -1
    left -10%
    top -10%

#clock
    width 100%
    height 45%

.add-item-block
    background #ccc
    height 50%
    display flex
    flex-direction column
    justify-content space-evenly

.btn-addTimer
    border-radius 50%

.step
    width 60px
    height 30px
    line-height 30px
    margin 10px 20px
    background #ffa
    flex-shrink 0
    border-radius 3px
    text-align center
    position relative
.next-icon
    position absolute
    right -25px
    top 0

.new-steps
    width 100%
    height 80px
    // background #eee
    overflow scroll
    display flex
    margin 10px 0

.new-steps::-webkit-scrollbar
    // display none
// -------- 小尺寸 -------------------------------------------------------

@media(max-width:600px)
    #nav-sm,
    #user-option
        display block
    #menu 
        display none
    .main-content
        width 100%
        left 0
        background transparent
    #information,#home,#workout
        width 100% !important
        left 0px
    #information .banner
        height 290px
        width 290px
    #information .woman
        left calc(50% - 200px)
        top -3%
        width 400px
        z-index 2
        margin 0 auto 
    .info-title
        font-size 135px
        letter-spacing 40px
        left -30%
        top 0%
        line-height 350px
        font-weight 800
    .info-subtitle
        font-size 7px
        letter-spacing 3px
        top 100%
    .info-back-title
        font-size 33px
        left 0%
        top 22%
    .more
        font-size 5px
    .c1-title
        font-size 20px
        letter-spacing 3px
        left calc(50% - 30px)
        top -35px
    .num1,.num2,.num3
        left calc(50% - 45px)
    .num1::before,.num2::before,.num3::before
        font-size 60px
        font-weight 900
        left -30px
        top -72px
        letter-spacing 8px
    .num1::after,.num2::after,.num3::after
        content ""
        position absolute
        left 10px
        top -25px
        background rgb(255, 246, 230)
        // background #ddd
        height 30px
    .box-1-title
        font-size 30px
        margin auto
        left calc(50% - 107px)
    .box-1
        font-size 12px
    #workout .banner .title
        line-height 300px
        font-size 30px
    .sign-btn,
    .login-btn
        display none

