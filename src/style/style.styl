.box-1
    z-index 999
    margin auto
    padding-top 300px
    font-family 'Playfair Display', serif
    letter-spacing 1px
    text-align justify
    text-justify inter-ideograph
    text-indent 20px

.box-1-title
    position absolute
    top 180px
    left calc(50% - 210px)
    font-family 'Oswald', sans-serif
    font-size 60px
    letter-spacing 1px
    color #EC5C2E

.num2
    height 90px
    position absolute
    z-index 999
    background #000

.num2::before
    content "02"
    position absolute
    font-size 90px
    font-weight 900
    font-family 'Oswald', sans-serif
    color #FFE1B2
    left -60px
    top -72px
    letter-spacing 8px

.num2::after
    content ""
    position absolute
    left -10px
    top 5px
    background rgb(255, 246, 230)
    width 155px
    height 55px

.num3
    height 320px
    position absolute
    z-index 999
    background url('~@/assets/room.jpg') repeat-y center/70% 70%
    background-attachment fixed
    border-radius 20px

.num3-title
    color #fff
    font-size 25px
    line-height 50px
    font-weight 900
    font-family 'Oswald', sans-serif
    letter-spacing 6px
    position absolute
    left calc(50% - 160px)
    top 14%
    z-index 9000
    // background #EC5C2E !important

.num3-title::after
    content:'CONTACT US'
    position absolute
    background #EC5C2E
    width 190%
    height 110%
    top 0
    left 0
    font-size 35px
    line-height 55px
    padding-left 16px
    letter-spacing 15px
    border-radius 6px

