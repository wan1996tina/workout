    font-size 25px
    line-height 50px
    font-weight 900
    font-family 'Oswald', sans-serif
    letter-spacing 6px
    position absolute
    z-index 9999
    background transparent !important

.num1::before
    content "01"
    position absolute
    font-size 90px
    font-weight 900
    font-family 'Oswald', sans-serif
    color #FFE1B2
    left -60px
    top -72px
