html,body
    width 100%
    height 100%

* 
    margin 0
    padding 0
    list-style none
    box-sizing border-box

#app 
    width 100%
    height 100vh
    position relative
    // background #ffa

.slideBg
    width 97%
    height 150%
    background-color pink
    border-radius 15px 15px 0 0
    position fixed
    top 2%
    left 1.5%
    z-index -1

.nav-item 
    // background-color #eeeeee
    margin-bottom 15px
    font-size 30px
    line-height 50px
    text-align center
    border-radius 5px

.bm-burger-bars
    background-color white

#home
    background #fff
    height 100%
    border-radius 20px 
    position absolute
    top 20px
    right 1%
    width 98%

#home h1
    height 100%
    font-size 40px
    width 100%
    text-align center
    line-height 100px

#menu a
    color: #fff !important;
    text-decoration: none;

#menu a:hover,
#menu a:focus 
    background: #ccc;
    border-radius 5px


.bm-overlay
    background: #fff !important;

