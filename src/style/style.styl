    font-size 20px
    position absolute
    left 10%
    top 90%
    letter-spacing 9px
    color rgba(0,0,0,0.2)

.info-back-title
    font-family 'shorelines'
    color #ddd
    font-size 100px
    position absolute
    left -20%
    top 12%

.animate__animated.animate__fadeInDown 
    --animate-duration 2.5s

.triangle
    width 0
    height 0
    border-style solid
    border-width 10.5px 10.5px 0 10.5px
    border-color #EC5C2E transparent transparent transparent

.more
    margin-top 90px
    font-family 'Frank Ruhl Libre', serif
    color #EC5C2E

