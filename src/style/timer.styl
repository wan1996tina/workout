// timer.vue -------------------------------------------------

#timer
    height 100%

#timer .container-fluid
    height 100%
    display flex
    justify-content center
    align-items center
    flex-direction column
    // background linear-gradient(60deg,rgba(253,187,250,0.25) 0%,rgba(255,209,148,0.6) 45%,rgba(112,225,245,0.5) 100%),linear-gradient(60deg,rgba(255,255,255,0.5) 0%, transparent 100%), url('~@/assets/sky.jpg') no-repeat center/cover
    background #E4F3FF

#timer h1
    margin 2rem 0
    font-family 'Microsoft JhengHei' 
    color #000
    z-index 1

.clock_shadow
    box-shadow 0 0 20px #fff
    height 300px
    width 300px
    background-color transparent
    border-radius 50%
    position relative

.shadow_in
    box-shadow inset 0 0 23px #fff
    height 87%
    width 87%
    top 6.7%
    left 6.7%
    background-color transparent
    border-radius 50%
    position absolute

.backdrop
    height 700px
    width 450px
    background-color rgba(255,220,200,0.05)
    position absolute
    backdrop-filter blur(5px) hue-rotate(75deg)
    border-radius 1rem
    box-shadow 5px 5px 10px rgba(100,100,100,0.3)

// ********************************************* timer.vue end

