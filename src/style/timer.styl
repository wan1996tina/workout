@import url('https://fonts.googleapis.com/css2?family=Quicksand&display=swap')

body
    // font-family var(--font-family-sans-serif),"Noto Sans TC"
    font-family 'Quicksand','Microsoft JhengHei', sans-serif
    height 100vh

// list.vue ------------------------------------------

#list .container
    padding-top 50px

#list .title
    font-size 65px
    font-family Arial
    color white
    letter-spacing 3px

#list .btn1
    width 100px

.addInput .form-control::-webkit-input-placeholder 
    color #aaa
    font-size 18px
    font-family 'Microsoft JhengHei','Quicksand', sans-serif

#list
    background radial-gradient(#ad5389,#3c1053)
    height 100%
    z-index: 999
    padding-top 40px

#list ul
    display flex
    flex-direction column
    align-items center
    margin-top 15px

#list li
    // background-color #F5A5AC 
    // background-color #FEAC5E
    background-color #1e3c72
    width 88%
    list-style none
    height 60px
    line-height 60px
    border-radius 4px
    padding-left 25px
    font-size 24px
    color #fff
    margin 7px auto
    box-shadow 3px 5px 5.5px rgba(0,0,0,.35)
    display flex
    justify-content space-between
    align-items center

#list p
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    width 50%
    margin 0

#list .empitySpan
    font-size 30px
    color white
    margin 30px
    text-align center

.btn-cancel
    border none
    border-radius 50%
    background rgba(255,255,255,0.95)
    box-shadow 0px 4px 9px rgba(0,0,0,0.2)
    font-size 20px
    color #A50037
    height 30px
    width 30px
    line-height 30px

.btn-cancel:active
    outline none
    background #A50037
    color #fff

.btn-save:active
    outline none
    background #1E9E4A
    color #fff

.btn-save
    border none
    border-radius 50%
    background rgba(255,255,255,0.95)
    box-shadow 0px 4px 9px rgba(0,0,0,0.2)
    font-size 20px
    color #1E9E4A
    height 30px
    width 30px
    line-height 30px

.editBtns 
    display flex
    justify-content space-evenly
    align-items center
    // background #fff
    width 30%
    height 100%
    margin-right 10px

.editInput
    background none
    border none
    border-bottom 1.5px solid rgba(255,255,255,.8)
    height 70%
    width 60%
    padding-left 5px
    position relative
    color #fff
    font-size: 18px

.editInput:focus
    border none
    outline none 
    border-bottom 1.5px solid rgb(70,70,70)
    transition 0.5s
    color rgb(70,70,70)
    background rgba(255,255,255,0.9)
    border-radius 4px
    height 60%

.btn-edit
    border none
    background transparent
    // box-shadow 0px 4px 9px rgba(0,0,0,0.2)
    font-size 20px
    color #fff
    height 30px
    width 30px
    line-height 30px

.btn-del
    border none
    background transparent
    // box-shadow 0px 4px 9px rgba(0,0,0,0.2)
    font-size 20px
    color #fff
    height 30px
    width 30px
    line-height 30px

.btn-edit:active
    outline none
    background #666
    color #fff

.btn-del:active
    outline none
    background #666
    color #fff

.btn-cancel:focus,.btn-save:focus,.btn-edit:focus,.btn-del:focus
    outline none

.dragwrap
    width 100%



// ********************************************** list.vue end

